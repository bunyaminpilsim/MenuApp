@model IEnumerable<MenuDto>

@{
    ViewData["Title"] = "Menu Listesi";
}

<h2 class="my-4">Menu Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Menu Adı</th>
            <th>Fiyat</th>
            <th>Kateori</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var menu in Model)
        {
            <tr>
                <td>@menu.Id</td>
                <td>@menu.Name</td>
                <td>@menu.Price</td>
                <td>@menu.CategoryId</td>
                <td><img src="@menu.ImgPath" alt="Menu Image" width="100" /></td>
                <td>
                    <a href="/Menu/UpdateMenu?id=@menu.Id" class="btn btn-primary">Güncelle</a>
                    <a href="/Menu/DeleteMenu?id=@menu.Id" class="btn btn-primary">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>