@model MenuDto

@{
    ViewData["Title"] = "Menu Güncelle";

}

<h2 class="my-4">Menu Güncelle</h2>

<form asp-action="UpdateMenu" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Id</label>
        <input type="number" class="form-control" asp-for="Id" readonly/>
    </div>
    <div class="form-group">
        <label>Menu Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label>Fiyat</label>
        <input type="number" class="form-control" asp-for="Price" />
    </div>

    <div class="form-group">
        <label>Kategori</label>
        <select class="form-control" asp-for="CategoryId">
            <option value="">Seçiniz</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Dosya Seç:</label>
        <input type="file" id="file" asp-for="File" />
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}